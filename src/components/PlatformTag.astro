---
import type { Platform } from '@/types/Game';

interface Props {
  platform: Platform;
}

const { platform } = Astro.props;

// Platform color mapping
const platformColors: Record<Platform, string> = {
  Steam: 'bg-platform-steam text-white',
  PlayStation: 'bg-platform-playstation text-white',
  Xbox: 'bg-platform-xbox text-white',
  Switch: 'bg-platform-switch text-white',
  PC: 'bg-platform-pc text-white',
};

// Platform logo paths
const platformLogos: Record<Platform, string> = {
  PC: '/images/platforms/pc.svg',
  PlayStation: '/images/platforms/playstation.svg',
  Xbox: '/images/platforms/xbox.svg',
  Switch: '/images/platforms/switch.svg',
  Steam: '/images/platforms/steam.svg',
};
---

<span
  class={`inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-medium ${platformColors[platform]} transition-all duration-200 hover:scale-105`}
>
  <img 
    src={platformLogos[platform]} 
    alt={platform}
    class="w-3 h-3"
    loading="lazy"
  />
  <span>{platform}</span>
</span>

